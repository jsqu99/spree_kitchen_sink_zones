<div data-hook="admin_zipcode_form_fields" class="row">
  <div class="alpha four columns">
    <div data-hook="name" class="field">
      <%= f.label :zipcode, Spree.t(:zipcode) %>
      <%= f.text_field :zipcode, :class => 'fullwidth' %>
    </div>
  </div>
  <div class="four columns">
    <div data-hook="iso_name" class="field">
      <%= f.label :city, Spree.t(:city) %>
      <%= f.text_field :city, :class => 'fullwidth' %>
    </div>
  </div>
  <div class="omega four columns">
    <div data-hook="states_required" class="field checkbox">
      <label>
        <%= f.label :state_id, Spree.t(:state) %>

        <%= f.select :state_id, options_from_collection_for_select(@states, :id, :name, (f.object.state.id rescue nil)) %>
      </label>

    </div>
  </div>
</div>
